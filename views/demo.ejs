    <title>Document</title>
</head>
<style>
    body{
        background-color:#36454f;
        color:white;
    }
    .btn {
 
  transition: 1s;
}

.btn:hover {opacity: 1 ;border-radius:20px;}
 
 .input{
    background: transparent;
  border-bottom: 1px solid white;
    transition: 1s;
    color:white;

 }
.menuitem{
    transition: 1s;
}
.menuitem:hover{
    background-color: rosybrown;
    color:whte;
    border-radius: 5px;
}
 .input:hover{
   border-radius:20px;
   color:white;
   background-color: #1a66ff;
 }
      #signin{
        display:none;
      }
    .button{
        background-color: tomato;
        color:white;
        transition:1s;
    }
    .button:hover{
        background-color: thistle;
        color:purple;
        border-radius: 5px;;
    }
</style>
<body>
    
 <div width="100%" style="text-align:center;"> 
        
            <h2 class="navbar-brand" href="#" style=" text-align:center;color:white; font-family: 'Sofia';font-size: 52px;"> To-do List app</h2>
        </div>
        
  
    
  <hr>
  
  

  
<nav class="navbar navbar-expand-md bg-dark navbar-dark" style="position:fixed;bottom:0px;width:100%;">
    <a class="navbar-brand" href="#"> Signed as-> <%= datas[0].email %>   </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar" style="position:relative;right:5px">
      <ul class="navbar-nav ">
        <li class="nav-item">
          <a class="nav-link  btn btn-danger" style="color:white" href="/logout">Logout</a>
        </li>

      </ul>
    </div>  
  </nav>





    <div class="container" style="text-align: center;margin-top:2%;">

    
        <form class="form-inline" method="POST" action="/addtask" >
          <div class="form-group">
            <label for="email">Task-></label>
            <input type="text" class="form-control" id="email" placeholder="Enter email" name="task" required>
          </div>
&nbsp&nbsp
          <div class="form-group">
            <label for="pwd">Password-></label>
            <input type="time" class="form-control" id="pwd" placeholder="Enter password" name="time" required>
          </div>
          &nbsp&nbsp
          <div class="form-group">
            <label for="pwd">Add task-></label>
         
            <button type="submit" class="button  form-control">Submit</button>
          </div>

        </form>
      </div>
      











        
<div class="container" style="margin-top:5%;">
       
    <table class="table table-striped" style="color:white;border-spacing: 4px;">
      <thead>
        <tr>
          <th>Task</th>
          <th>Time</th>
          <th>Status</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=1;i<datas.length;i++) { %>
       
            <td><%= datas[i].task %></td>
            <td><%= datas[i].time %></td>

          <%  if(datas[i].status!=="Completed"){ %>
            <td>   <span class="badge badge-danger" style="font-size: 15px;"><%= datas[i].status %></span></td>
         <% } %>

         <%  if(datas[i].status!=="incomplete"){ %>
            <td>   <span class="badge badge-success" style="font-size: 15px;"><%= datas[i].status %></span></td>
         <% } %>
 
         <td>
            <% if(datas[i].status!=="Completed"){ %> 
          <a class="btn btn-success" href="/donetask/<%= datas[i]._id %>"> done </a>
   <% } %>
         </td>
            <td>  <a class="btn btn-danger" href="/deletetask/<%= datas[i]._id %>"> X </a></td>
        </tr>
        
        <% } %>
  
      </tbody>
    </table>
  </div>
  
</body>
</html>